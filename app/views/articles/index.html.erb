<div class='text'><h1>Listing Articles</h1></div>
<div class='new_art'><%= link_to 'New article', new_article_path, class: "btn btn-large btn btn-success" %></div>
<table class="table table-condensed">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Show', article_path(article), class: "btn btn-primary"%></td>
    <td><%= link_to 'Edit', edit_article_path(article) , class: "btn" %></td>
    <td><%= link_to 'Destroy', article_path(article),
                    method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %></td>
  </tr>
<% end %>
</table>